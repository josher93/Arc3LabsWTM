<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LoginFormContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.arc3labswtm_android.EditaActividadActivity" >

	<EditText
        android:id="@+id/txt_edita_Titulo"
        android:layout_width="match_parent"
        android:hint="@string/activity_name"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/sp_edita_Estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/sp_edita_Proyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

  <DatePicker
        android:id="@+id/date_edita_Picker1"
        android:calendarViewShown="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txt_edita_Descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/activity_description"
        android:ems="10"
        android:inputType="textMultiLine" />
    
